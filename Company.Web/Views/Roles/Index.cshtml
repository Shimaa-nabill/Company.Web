@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">All Roles</h1>
<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-lg"></i> Add New Role
</a>


@if (Model?.Count() > 0)
{
    <!-- Users Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(M => M.Id)</th>
                    <th>@Html.DisplayNameFor(M => M.Name)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <partial name="_ActionbuttonsPartialView" model="item.Id.ToString()" />
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center my-4">
        <h4><i class="bi bi-exclamation-triangle"></i> No Roles Found!</h4>
    </div>
}
