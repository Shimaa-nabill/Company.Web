@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">All Users</h1>

<!-- Search Form -->
<form class="my-3" asp-action="Index">
    <div class="row g-2">
        <div class="col-lg-8 col-md-8 col-sm-12 mb-2">
            <input placeholder="Search By Email" name="searchInp" class="form-control form-control-lg" />
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
            <button type="submit" class="btn btn-success btn-lg w-100">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </div>
</form>

@if (Model?.Count() > 0)
{
    <!-- Users Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(M => M.Id)</th>
                    <th>@Html.DisplayNameFor(M => M.UserName)</th>
                    <th>@Html.DisplayNameFor(M => M.Email)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.UserName)</td>
                        <td>@Html.DisplayFor(m => item.Email)</td>
                        <partial name="_ActionbuttonsPartialView" model="item.Id.ToString()"/>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center my-4">
        <h4><i class="bi bi-exclamation-triangle"></i> No Users Found!</h4>
    </div>
}
