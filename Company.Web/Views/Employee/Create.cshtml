@model EmployeeDto

@{
    ViewData["Title"] = "Create";
    var depts = new SelectList(ViewBag.Departments, "Id", "Name");
}

<h1>Create</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Age" class="form-label"></label>
            <input type="number" asp-for="Age" class="form-control" required />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input type="email" asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input type="text" asp-for="PhoneNumber" class="form-control" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input type="text" asp-for="Address" class="form-control" required />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Salary" class="form-label"></label>
            <input type="number" asp-for="Salary" class="form-control" required />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="DepartmentId" class="form-label">Department</label>
            <select class="form-select" asp-items="@depts" asp-for="DepartmentId" required>
                <option value="">--Select Department--</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="HiringDate" class="form-label"></label>
            <input type="date" asp-for="HiringDate" class="form-control" required />
            <span asp-validation-for="HiringDate" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label">Employee Image</label>
        <div class="custom-file">
            <input type="file" asp-for="Image" class="form-control-file" required />
        </div>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <input type="submit" value="Add Employee" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>
